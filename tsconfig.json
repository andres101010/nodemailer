
{
  "compilerOptions": {
    // "target": "ES6",
    // "module": "ESNext",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "./src",  
    "allowSyntheticDefaultImports": true,  
    "forceConsistentCasingInFileNames": true,  
    "paths": {
      "*": ["node_modules", "src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
